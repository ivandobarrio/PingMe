
<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
    <session-factory>

        <!-- Conexión -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/pingme?useSSL=false&serverTimezone=UTC
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!-- Dialecto -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Configuración -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.connection.pool_size">10</property>

        <!-- SOLO ENTIDADES -->
        <mapping class="com.PingMe.entidades.Usuario"/>
        <mapping class="com.PingMe.entidades.Mensaje"/>
        <mapping class="com.PingMe.entidades.Sala"/>
        <mapping class="com.PingMe.entidades.ServerPeticion"/>
        <mapping class="com.PingMe.entidades.ServerRespuesta"/>
        <mapping class="com.PingMe.entidades.TipoComando"/>

        <!-- ELIMINADO: NO mapear controllers ni vistas -->

    </session-factory>
</hibernate-configuration>
