
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pingme.ui.RecuperarController"
            prefWidth="780" prefHeight="340"
            stylesheets="@registro.css">

    <!-- Barra superior con marca -->
    <top>
        <HBox spacing="12" alignment="CENTER">
            <padding><Insets top="16" right="16" bottom="8" left="16"/></padding>
            <Label text="PingMe" styleClass="brand"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="22" alignment="TOP_CENTER">
            <padding><Insets top="8" right="24" bottom="16" left="24"/></padding>

            <GridPane hgap="14" vgap="12" maxWidth="640">
                <!-- Etiqueta Email -->
                <Label text="Email" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                <TextField fx:id="emailField" promptText="tu@email.com"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"
                           GridPane.columnSpan="2" />
            </GridPane>

            <!-- Botón Recuperar -->
            <HBox alignment="CENTER">
                <Button fx:id="recuperarBtn" text="Recuperar contraseña"
                        onAction="#onRecuperar"
                        styleClass="primary-btn"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
